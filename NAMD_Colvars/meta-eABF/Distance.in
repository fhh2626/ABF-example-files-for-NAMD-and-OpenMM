colvarsTrajFrequency      1000
colvarsRestartFrequency  50000

colvar {
   name AtomDistance
  
   width 0.1

   lowerboundary 12.0
   upperboundary 32.0

   lowerwallconstant 10.0
   upperwallconstant 10.0
   
   extendedLagrangian  on
   extendedFluctuation  0.1
   
   subtractAppliedForce  on
   expandBoundaries      on

   distance {
      group1 {
         atomnumbers { 10 }
      }
      group2 {
         atomnumbers { 92 }
      }
   }
}


abf {
   colvars AtomDistance
   fullSamples   500
}

metadynamics {
   colvars AtomDistance
   hillWeight 0.1
   hillWidth  3
}